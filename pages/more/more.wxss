.title{
  font-size: 35rpx;
  padding-left: 15rpx;
  border-left: 1rpx solid #000 
}
.content{
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
}
.box-l .img{
  width:200rpx;
  height:280rpx;
}
.box-r{
  padding-left: 20rpx
}
.box-r text{
  margin-left: 12rpx
}
.box-r .book-title{
  font-size: 32rpx;
  padding: 15rpx 0
}
.box-r .book-desc{
  font-size: 25rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  margin: 15rpx 0
}
.author{
  padding: 50rpx 0 0 0
}
.author .author-l{
  font-size: 25rpx;
  color: #666;
  float: left
}
.author-r{
  font-size: 25rpx;
  color: #666;
  float: right;
}
.ending{
  position: relative;
  left: 0;
  right: 0;
  bottom:0;
  text-align: center;
  font-size: 28rpx;
  color: #666
}