.container .slide-image{
  width:710rpx;
  height:350rpx;
}
.content-item .title{
  font-size: 35rpx;
  font-weight: bold;
  padding:30rpx 20rpx 10rpx 20rpx;
  margin-left: 2px solid #000
} 
.content{
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0
}
.box-l .img{
  width:200rpx;
  height:280rpx;
}
.box-r{
  padding-left: 20rpx
}
.box-r .book-title{
  font-size: 32rpx;
  padding: 15rpx 0
}
.box-r .book-desc{
  font-size: 25rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  margin: 15rpx 0
}
.author{
  padding: 50rpx 0 0 0
}
.author .author-l{
  font-size: 25rpx;
  color: #666;
  float: left
}
.author-r{
  font-size: 25rpx;
  color: #666;
  float: right;
}