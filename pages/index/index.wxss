.container refresh{
 width: 40rpx;
 height: 30rpx  
}
.container .slide-image{
  width:710rpx;
  height:350rpx;
}
.content-item .title{
  display: flex;
  justify-content: space-between;
  padding:30rpx 20rpx 10rpx 20rpx;  
}
.content-item .title .title-name{
  font-size: 35rpx;
  font-weight: bold;
  padding-left: 15rpx;  
  border-left: 1rpx solid #000   
} 
.content-item .title .title-more{
  font-size: 28rpx;
  font-weight: bold;
  color: #666
} 
.content{
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0
}
.box-l .img{
  width:200rpx;
  height:280rpx;
}
.box-r{
  padding-left: 20rpx
}
.box-r text{
  margin-left: 12rpx
}
.box-r .book-title{
  font-size: 32rpx;
  padding: 15rpx 0
}
.box-r .book-desc{
  font-size: 25rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  margin: 15rpx 0
}
.author{
  padding: 50rpx 0 0 0
}
.author .author-l{
  font-size: 25rpx;
  color: #666;
  float: left
}
.author-r{
  font-size: 25rpx;
  color: #666;
  float: right;
}
.bottom{
  position: relative;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  text-align: center;
  background-color: #fff;
  padding-top: 20rpx
}
.load-last{
  position: relative;
  left: 0;
  right: 0;
  bottom: 0;
  height: 50rpx;
  text-align: center
}
.load-end{
  height: 50rpx;
  width: 50rpx;
}
.load-text{
  font-size: 35rpx;
  margin-left: 10rpx
}
 